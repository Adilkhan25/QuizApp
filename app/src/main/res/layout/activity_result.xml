<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/quiz_app_bg"
    tools:context=".ResultActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/quiz_app_tx"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_trophy"
            android:layout_marginTop="60dp"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/congratulations"
           android:layout_marginTop="25dp"
           android:textColor="@color/quiz_app_tx"
           android:textStyle="bold"
           android:textSize="22sp"
           />
    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Adil"
        android:layout_marginTop="15dp"
        android:textColor="@color/quiz_app_tx"
        android:textStyle="bold"
        android:textSize="22sp"
        />
      <TextView
          android:id="@+id/tvScored"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="your score is 0 out of 20"
          android:layout_marginTop="15dp"
          android:textSize="18sp"
          android:textStyle="bold"
          android:textColor="@color/quiz_app_card_bg"
          />
      <Button
          android:id="@+id/btnFinish"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="FINISH"
          android:textColor="@color/quiz_app_card_bg"
          android:backgroundTint="@color/quiz_app_wel_cl"
          android:textStyle="bold"
          android:textSize="20sp"
          android:padding="5dp"
          android:layout_margin="10dp"
          />


</LinearLayout>